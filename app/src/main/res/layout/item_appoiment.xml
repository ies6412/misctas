<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.MyAppoimentActivity"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient"
    app:cardUseCompatPadding="true"
    android:padding="16dp"
    android:gravity="center"
    app:cardElevation="4dp"
    app:cardCornerRadius="3dp">

      <LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
          android:orientation="vertical"
          android:padding="8dp"
          >

          <TextView
              android:id="@+id/TwAppointesId"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              tools:text="Cita Médica No"
              android:gravity="center_horizontal"
              style="@style/TextAppearance.AppCompat.Widget.TextView.SpinnerItem"
              />

          <TextView
              android:id="@+id/TwMedicoId"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              tools:text="medico test"
              android:gravity="center_horizontal"
              style="@style/TextAppearance.AppCompat.Widget.TextView.SpinnerItem"
              />

          <TextView
              android:id="@+id/TwespecialdiadId"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              tools:text="Especialidad"
              android:gravity="center_horizontal"
              style="@style/TextAppearance.AppCompat.Widget.TextView.SpinnerItem"
              />

          <TextView
              android:id="@+id/TwHoraId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
              tools:text="Hora de cita"
              android:gravity="center_horizontal"
              style="@style/TextAppearance.AppCompat.Widget.TextView.SpinnerItem"
                />

          <TextView
              android:id="@+id/TwFechaId"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              tools:text="Fecha de cita"
              android:gravity="center_horizontal"
              style="@style/TextAppearance.AppCompat.Widget.TextView.SpinnerItem"
              />

          <FrameLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center">

          <TextView
              android:id="@+id/TwEstado"
              style="@style/TextAppearance.AppCompat.Widget.TextView.SpinnerItem"
              android:layout_width="wrap_content"
              android:layout_weight="1"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              tools:text="Confirmado..." />
              <ImageButton
                  android:layout_gravity="end"
                  android:id="@+id/imgbutton"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:src="@drawable/ic_expand_more_black_24dp"
                  android:background="@color/colorBlanco"
                  tools:src="@drawable/ic_expand_less_black_24dp"
                  />


          </FrameLayout>
               <LinearLayout
                   android:id="@+id/lineardatos"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:visibility="gone"
                   tools:visibility="visible"

                   >
          <TextView
              android:id="@+id/TwTipoConsulta"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              tools:text="Tipo de Consulta"
              android:gravity="center_horizontal"
              style="@style/TextAppearance.AppCompat.Widget.TextView.SpinnerItem"
              />


          <TextView
              android:id="@+id/Twfechareserva"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              tools:text="Esta cita se registro el día: created_at con la siguiente descripción:"
              android:gravity="center_horizontal"
              style="@style/TextAppearance.AppCompat.Widget.TextView.SpinnerItem"
              />
                   <TextView
                       android:id="@+id/TwTDeescripcion"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       tools:text="Descripcion"
                       android:gravity="center_horizontal"
                       style="@style/TextAppearance.AppCompat.Widget.TextView.SpinnerItem"
                       />

               </LinearLayout>














      </LinearLayout>















</androidx.cardview.widget.CardView>